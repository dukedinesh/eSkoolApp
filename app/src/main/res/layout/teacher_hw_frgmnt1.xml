<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:paddingBottom="50dp">


                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/viewattendance"
                    android:hint="Date"
                    android:padding="12dp"
                    android:textColorHint="#c9c8c8"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/className"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/viewattendance"
                    android:hint="Class"

                    android:padding="12dp"
                    android:textColorHint="#c9c8c8"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/sectonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/viewattendance"
                    android:padding="12dp"
                    android:hint="Section"
                    android:textColorHint="#c9c8c8"

                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/subjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/viewattendance"
                    android:padding="12dp"
                    android:hint="Subject"
                    android:textColorHint="#c9c8c8"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/chapter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/viewattendance"
                    android:padding="12dp"
                    android:hint="Chapter"
                    android:textColorHint="#c9c8c8"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/subtopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/viewattendance"
                    android:padding="12dp"
                    android:hint="Sub-Topic"
                    android:textColorHint="#c9c8c8"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/due_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/viewattendance"
                    android:padding="12dp"
                    android:hint="Due Date"
                    android:textColorHint="#c9c8c8"
                    android:textSize="18dp" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/viewattendance1"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="UPLOAD FILE"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/viewattendance"
                    android:focusableInTouchMode="true"
                    android:gravity="top|left"
                    android:hint="Add Notes.."
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:maxLines="10"
                    android:minLines="4"
                    android:padding="12dp"
                    android:scrollbars="vertical"
                    android:textColorHint="#c9c8c8" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="34dp"
            android:background="#F0920A"
            android:padding="18dp"
            android:text="ADD"
            android:textColor="#ffffff" />


    </RelativeLayout>

</RelativeLayout>
